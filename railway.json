{
  "name": "qa-playwright",
  "services": [
    {
      "name": "web",
      "startCommand": "pnpm --filter web start",
      "env": {
        "NODE_ENV": "production",
        "APP_URL": "https://qa-playwright.up.railway.app",
        "DATABASE_URL": "postgresql://user:pass@host:port/dbname",
        "REDIS_URL": "redis://host:port",
        "SESSION_SECRET": "your-session-secret",
