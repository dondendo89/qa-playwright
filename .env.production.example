# Production Environment Variables for Railway
# Copy these to your Railway project environment variables

# NextAuth Configuration
NEXTAUTH_SECRET=your-production-secret-key-here
NEXTAUTH_URL=https://web-production-087e0.up.railway.app

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Stripe Price IDs
STRIPE_BASIC_PRICE_ID=price_your_basic_plan_id
STRIPE_PRO_PRICE_ID=price_your_pro_plan_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_plan_id

# Redis (Railway Redis)
REDIS_URL=redis://username:password@host:port

# Session Secret
SESSION_SECRET=your-session-secret-here

# Email Configuration
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@yourdomain.com

# S3 Configuration
S3_BUCKET=your-s3-bucket-name
S3_REGION=your-s3-region
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# App Configuration
NODE_ENV=production
APP_URL=https://qa-playwright.up.railway.app